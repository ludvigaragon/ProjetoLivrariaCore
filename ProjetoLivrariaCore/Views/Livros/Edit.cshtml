@model ProjetoLivrariaCore.Models.Livro

@{
    ViewData["Title"] = "Editar Livro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Livro</h2>
<hr />
<div class="row">
    <form id="editar" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LivroId" />
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" readonly="readonly" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPublicacao" class="control-label"></label>
                <input asp-for="DataPublicacao" class="form-control" />
                <span asp-validation-for="DataPublicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapaLivro" class="control-label"></label>
                <input asp-for="CapaLivro" class="form-control" type="file" onclick="process()" onchange="processClose()" />
                <input type="hidden" asp-for="PathCapaLivro" />
                <span asp-validation-for="CapaLivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-warning">Voltar para Consulta</a>
            </div>
        </div>
        <div class="col-md-4">
            <img width="400" src=@string.Concat("../../images/CapasLivros/", @Model.PathCapaLivro) />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

